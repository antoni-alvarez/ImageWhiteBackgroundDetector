{
    "name": "aalvarez/image-white-bg-validation",
    "description": "Image white background validator",
    "license": "proprietary",
    "type": "project",
    "authors": [
        {
            "name": "Antoni Alvarez"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ext-ctype": "*",
        "ext-gd": "*",
        "ext-iconv": "*",
        "intervention/image": "^3.2",
        "rubix/ml": "^2.4",
        "symfony/console": "^6.4",
        "symfony/finder": "^6.4",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "^6.4",
        "symfony/runtime": "^6.4",
        "symfony/yaml": "^6.4"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2",
        "php-cs-fixer/shim": "^3",
        "phpat/phpat": "^0.10.11",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-symfony": "^1.3",
        "phpunit/phpunit": "^10.5",
        "symfony/phpunit-bridge": "^6.4"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "^6.4"
        }
    },
    "scripts": {
        "analyze:lint": [
            "composer validate",
            "composer normalize --dry-run"
        ],
        "analyze:phpstan": [
            "vendor/bin/phpstan analyse -c phpstan.dist.neon",
            "vendor/bin/phpstan analyse -c phpstan.tests.neon"
        ],
        "analyze:standards": [
            "vendor/bin/php-cs-fixer fix --dry-run --verbose --show-progress=dots"
        ],
        "fix:standards": [
            "composer validate",
            "vendor/bin/php-cs-fixer fix --verbose --show-progress=dots"
        ],
        "test": [
            "bin/phpunit -c tests/phpunit.xml"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
